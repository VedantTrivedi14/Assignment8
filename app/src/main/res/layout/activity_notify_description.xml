<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.NotifyDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding"
        tools:ignore="UseCompoundDrawables">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:contentDescription="@string/notify_icon"
            android:padding="@dimen/padding" />

        <TextView
            android:id="@+id/titleNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:textColor="@color/black"
            android:textSize="@dimen/headerSize" />
    </LinearLayout>

    <TextView
        android:id="@+id/msgNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:padding="@dimen/padding"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize" />

    <TextView
        android:id="@+id/longTextNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:padding="@dimen/padding"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize" />

</LinearLayout>